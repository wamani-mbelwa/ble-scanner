{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true,
    "types": [
      "jest",
      "react",
      "react-native"
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "__tests__",
    "e2e",
    "jest.setup.ts"
  ]
}
